@model IEnumerable<MenuItem>

<div class="card">
    <div class="card-body">
        <h2 class="card-title">Popular Brews <small> as of @DateTime.Now</small> </h2>
        @foreach (var item in Model)
        {
            <p><span class="card-text text-success">@item.Name</span> - @item.Summary</p>
        }
    </div>
    <div class="card-footer">
        <a href="#" class="btn btn-success">Full Menu</a>
    </div>
</div>